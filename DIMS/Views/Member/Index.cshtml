@model Member
@{
    Layout = "_layout";
}
@if (@ViewBag.isSuccess)
{
    if (@ViewBag.DuplicateError)
    {
        <div class="alert alert-danger fade show alert-dismissible" role="alert">
            <strong> @ViewBag.DuplicateErrormsg! </strong><br />
            <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="close">&times; </button>
        </div>
    }
    else
    {
        <div class="alert alert-success fade show alert-dismissible" role="alert">
            <strong>Congratulations</strong>You should add new Member Info successfully.<br />
            <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="close">&times; </button>
        </div>
    }
}

<div>
    <div class="modal fade" id="modal-md">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-gradient-primary">
                    <h3 class="modal-title text-center">Add New Member</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="post" asp-action="AddNewMember" asp-controller="Member">
                        <fieldset>

                            <div class="form-group float-right col-lg-6">
                                <select class="form-control select2" asp-for="EnterpriseId" asp-items="ViewBag.Enterprise">
                                    <option selected="selected" value="">Choose Enterprise</option>
                                </select>
                            </div>
                            <div class="form-group float-left col-lg-6">
                                <select class="form-control select2" asp-for="TitleId" asp-items="ViewBag.Title">
                                    <option selected="selected" value="">Choose Title</option>
                                </select>
                            </div>
                            <div class="form-group float-right col-lg-6">
                                <select class="form-control select2" asp-for="GenderId" asp-items="ViewBag.Gender">
                                    <option selected="selected" value="">Choose Gender</option>
                                </select>
                            </div>
                            <div class="form-group float-left col-lg-6">
                                <select class="form-control select2" asp-for="DisabilityId" asp-items="ViewBag.Disability">
                                    <option selected="selected" value="">Choose Disability</option>
                                </select>
                            </div>
                            <div class="form-group float-right col-lg-6">
                                <select class="form-control select2" asp-for="MemberTypeId" asp-items="ViewBag.MemberType">
                                    <option selected="selected" value="">Choose MemberType</option>
                                </select>
                            </div>
                            <div class="form-group float-left col-lg-6">
                                <input asp-for="FirstName" class="form-control" placeholder="Enter First Name" />
                            </div>
                            <div class="form-group float-right col-lg-6">
                                <input asp-for="MiddleName" class="form-control" placeholder="Enter Middle Name" />
                            </div>
                            <div class="form-group float-left col-lg-6">
                                <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" />
                            </div>
                            <div class="form-group float-right col-lg-6">
                                <label>Birth Date</label>
                                <input asp-for="BirthDate" class="form-control" placeholder="Enter Birth Date" />
                            </div>
                            <div class="form-group float-left col-lg-6">
                                <label>Date of joing</label>
                                <input asp-for="DateOfJoing" class="form-control" placeholder="Enter DateOfJoing" />
                            </div>
                            <div class="form-group float-right col-lg-6">
                                <input asp-for="Role" class="form-control" placeholder="Enter Member role" />
                            </div>
                            <div class="form-group float-left col-lg-6">
                                <input type="checkbox" asp-for="@Model.IsDisable" class="form-control form-check-input" id="exampleCheck2">
                                <label class="form-control text-lg form-check-label" for="exampleCheck2">Is Disable</label>
                            </div>
                            <div class="form-check float-right col-lg-6">
                                <input type="checkbox" asp-for="@Model.IsFounder" class="form-control form-check-input" id="exampleCheck2">
                                <label class="form-control text-lg form-check-label" for="exampleCheck2">Is Founder</label>
                            </div>
                            <div class="form-group float-right col-lg-6">
                                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Enter Region Description"></textarea>
                            </div>
                        </fieldset>
                        <div class="modal-footer justify-content-between">
                            <button type="button" class="btn btn-lg font-weight-bolder btn-outline-danger" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-lg font-weight-bolder btn-outline-primary"><i class="fas fa-save mr-2"></i>Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <button type="button" class="btn btn-lg btn-outline-primary float-right font-weight-bolder" data-toggle="modal" data-target="#modal-md">
                                <i class="fa fa-plus-square mr-2"></i> Add New
                            </button>
                            <h2 class="float-left note-fontsize-10 font-weight-bolder">Member List</h2>
                        </div>

                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr class="bg-gradient-lightblue">
                                        <th>@Html.DisplayNameFor(model => model.Enterprise.EnterpriseName)</th>
                                        <th>@Html.DisplayNameFor(model => model.Title.TitleName)</th>
                                        <th>@Html.DisplayNameFor(model => model.Gender.GenderName)</th>
                                        <th>@Html.DisplayNameFor(model => model.MemberType.TypeName)</th>
                                        <th>@Html.DisplayNameFor(model => model.Disability.DisabilityName)</th>
                                        <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                                        <th>@Html.DisplayNameFor(model => model.MiddleName)</th>
                                        <th>@Html.DisplayNameFor(model => model.LastName)</th>
                                        <th>@Html.DisplayNameFor(model => model.Role)</th>
                                        <th>@Html.DisplayNameFor(model => model.DateOfJoing)</th>
                                        <th>@Html.DisplayNameFor(model => model.BirthDate)</th>
                                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                                        <th>@Html.DisplayNameFor(model => model.IsDisable)</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.GetAllMember)
                                    {
                                        <tr class="info">
                                            <td>@(item.Enterprise == null?"Not Set": item.Enterprise.EnterpriseName)</td>
                                            <td>@(item.Title == null?"Not Set": item.Title.TitleName)</td>
                                            <td>@(item.Gender == null?"Not Ser": item.Gender.GenderName)</td>
                                            <td>@(item.MemberType == null?"Not Set": item.MemberType.TypeName)</td>
                                            <td>@(item.Disability == null?"Not Ser": item.Disability.DisabilityName)</td>
                                            <td>@item.FirstName</td>
                                            <td>@item.MiddleName</td>
                                            <td>@item.LastName</td>
                                            <td>@item.Role</td>
                                            <td>@item.DateOfJoing</td>
                                            <td>@item.BirthDate</td>
                                            <td>@item.Description</td>
                                            <td>@item.IsDisable</td>
                                            <td>
                                                @*<button type="button" class="btn btn-lg btn-outline-info font-weight-bolder text-lg-center fa fa-edit mr-2" data-toggle="ajax-modal" title="Edit Services" data-target="#EditZonemodal" data-url="@Url.Action($"Edit/{item.Id}")"></button>*@
                                                <div class="btn-group">
                                                    <button type="button" class="btn btn-info">Action</button>
                                                    <button type="button" class="btn btn-default dropdown-toggle dropdown-hover dropdown-icon" data-toggle="dropdown">
                                                        <span class="sr-only">Toggle Dropdown</span>
                                                    </button>
                                                    <div class="dropdown-menu" role="menu">
                                                        <a class="dropdown-item nav-link" href="#">Action</a>
                                                        <a class="dropdown-item nav-link" asp-action="index" asp-controller="MemberAddressInfo" asp-route-id="@item.Id">Member AddressInfo</a>
                                                        <a class="dropdown-item nav-link" asp-action="index" asp-controller="EducationInformation" asp-route-id="@item.Id">EducationcInformation</a>
                                                        <a class="dropdown-item nav-link" href="#">Details</a>
                                                        <div class="dropdown-divider"></div>
                                                    </div>
                                                </div>
                                                <a class="btn btn-lg btn-outline-danger font-weight-bolder text-lg-center fa fa-trash-alt" title="Delete Region" asp-action="DeleteRegion" asp-controller="Zone" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this?')"></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="bg-gradient-navy">
                                        <td colspan="14"></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>